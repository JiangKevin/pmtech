{
    tools: {
        premake: "../tools/premake/premake5"
    },
    
    mac: {
        premake: [
            "xcode4",
            "--renderer=metal", 
            "--platform_dir=osx", 
            "--pmtech_dir=../"
        ],

        copy: [
            ["assets/audio", "bin/mac/data/audio"],
            ["../assets/audio", "bin/mac/data/audio"],
            ["assets/configs", "bin/mac/data/configs"],
            ["../assets/configs", "bin/mac/data/configs"]
        ]
    },
    
    macgl: {
        jsn_inherit: ["mac"],
        premake: [
            "xcode4",
            "--renderer=opengl", 
            "--platform_dir=osx", 
            "--pmtech_dir=../"
        ]
    }
}