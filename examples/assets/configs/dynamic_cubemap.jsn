{
    include: [
        common.jsn,
        post_process.jsn,
        editor_renderer.jsn
    ],
    
    render_targets:
    {
        chrome:
        {
            size  : [256,256],
            format: rgba8,
            type: cube
        },
        
        glass:
        {
            size  : [256,256],
            format: rgba8,
            type: cube        
        }
    },
                
    views:
    {
        demo_main:
        {
            inherit: "main_view",
            clear_colour: [1.0, 1.0, 1.0, 1.0]
        },
        
        chrome_cubemap_render:
        {
			inherit: "demo_main",
            target : [chrome],
            camera : "chrome_camera"
        },
        
        glass_cubemap_render:
        {
			inherit: "demo_main",
            target : [glass],
            camera : "glass_camera"
        }
    },
    
    view_sets: 
    {
        dynamic_cubemap: [
            chrome_cubemap_render,
            glass_cubemap_render,
            demo_main
        ]
    },
    
    view_set: dynamic_cubemap
}
