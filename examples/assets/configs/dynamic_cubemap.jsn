{
    include: [
        common.jsn,
        post_process.jsn,
        editor_renderer.jsn
    ],
    
    render_targets:
    {
        chrome:
        {
            size  : [256,256],
            format: rgba8,
            type: cube
        },
        
        chrome2:
        {
            size  : [256,256],
            format: rgba8,
            type: cube        
        }
    },
                
    views:
    {
        demo_main:
        {
            inherit: "main_view",
            clear_colour: [1.0, 1.0, 1.0, 1.0]
        },
        
        chrome1_cubemap_render:
        {
            inherit: "demo_main",
            pmfx_shader : forward_render,
            technique: "forward_lit",
            target : [chrome],
            camera : "chrome_camera"
        },
        
        chrome2_cubemap_render:
        {
            inherit: "demo_main",
            pmfx_shader : forward_render,
            technique: "forward_lit",
            target : [chrome2],
            camera : "chrome2_camera"
        }
    },
    
    view_sets: 
    {
        dynamic_cubemap: [
            chrome1_cubemap_render,
            chrome2_cubemap_render,
            demo_main
        ]
    },
    
    view_set: dynamic_cubemap
}
