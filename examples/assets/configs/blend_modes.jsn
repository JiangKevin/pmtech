{            
    include: [
        common.jsn,
    ],
	
	render_targets:
    {
		rt_no_blend:
		{
			size : [256, 256],
            format : rgba8
		},
		
        rt_alpha_blend:
        {
            size : [256, 256],
            format : rgba8
        },
		
		rt_additive:
        {
            size : [256, 256],
            format : rgba8
        },
		
		rt_premultiplied_alpha:
        {
            size : [256, 256],
            format : rgba8
        },
		
		rt_min:
        {
            size : [256, 256],
            format : rgba8
        },
		
		rt_max:
        {
            size : [256, 256],
            format : rgba8
        },
		
		rt_subtract:
        {
            size : [256, 256],
            format : rgba8
        },
		
		rt_rev_subtract:
        {
            size : [256, 256],
            format : rgba8
        }
	},
	
	blend_states:
    {
        premultiplied_alpha:
        {
            blend_enable: true,
			src_blend: one,
			dest_blend: inv_src_alpha
        },
		
		min:
        {
            blend_enable: true,
			src_blend: one,
			dest_blend: one,
			blend_op: blend_op_min
        },
		
		max:
        {
            blend_enable: true,
			src_blend: src_colour,
			dest_blend: src_colour,
			blend_op: blend_op_max
        },
		
		subtract:
        {
            blend_enable: true,
			src_blend: src_colour,
			dest_blend: src_colour,
			blend_op: belnd_op_subtract
        },
				
		rev_subtract:
        {
            blend_enable: true,
			src_blend: one,
			dest_blend: one,
			blend_op: blend_op_rev_subtract
        }
    },
	
	views:
    {
		clear_backbuffer:
		{
			target: ["main_colour", "main_depth"],
			clear_colour : [0.5, 0.5, 0.5, 1.0]		
		},
			
		base_blend_view:
		{
			clear_colour       : [0.0, 0.0, 0.0, 1.0],
			clear_depth        : 1.0,
			colour_write_mask  : 0x7,
			blend_state        : disabled,
			viewport           : [0.0, 0.0, 1.0, 1.0],
			raster_state       : default,
			depth_stencil_state: default,
			pmfx_shader        : post_process,
            technique          : blit,
			scene_views        : ["blend_layers"]
		},
		
		view_no_blend:
		{
			target : [rt_no_blend],
			inherit: base_blend_view,
			blend_state: disabled
		},
		
		view_alpha_blend:
		{
			clear_colour : [1.0, 0.0, 0.0, 1.0],
			target : [rt_alpha_blend],
			inherit: base_blend_view,
			blend_state: alpha_blend
		},
		
		view_additive:
		{
			target : [rt_additive],
			inherit: base_blend_view,
			blend_state: additive
		},
		
		view_premultiplied_alpha:
		{
			target : [rt_premultiplied_alpha],
			inherit: base_blend_view,
			blend_state: premultiplied_alpha
		},
		
		view_min:
		{
			target : [rt_min],
			inherit: base_blend_view,
			blend_state: min
		},
		
		view_max:
		{
			target : [rt_max],
			inherit: base_blend_view,
			blend_state: max
		},
		
		view_subtract:
		{
			target : [rt_subtract],
			inherit: base_blend_view,
			blend_state: subtract
		},

		view_rev_subtract:
		{
			target : [rt_rev_subtract],
			inherit: base_blend_view,
			blend_state: rev_subtract
		}
	},
	
	view_sets: 
    {
        blend_test: [
			clear_backbuffer,
            view_no_blend,
            view_alpha_blend, 
            view_additive, 
            view_premultiplied_alpha,
			view_min,
			view_max,
			view_subtract,
			view_rev_subtract
        ],
	}
    
    view_set: blend_test
}
