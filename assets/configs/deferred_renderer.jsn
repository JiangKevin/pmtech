{    
    render_targets:
    {        
        gbuffer_depth:
        {
            size   : equal,
            samples: 4,
            format : d24s8
        },
        
        gbuffer_albedo:
        {
            size   : equal,
            samples: 4,
            format : rgba8
        },
        
        gbuffer_normals:
        {
            size   : equal,
            samples: 4,
            format : rgba32f
        },
        
        gbuffer_world_pos:
        {
            size   : equal,
            samples: 4,
            format : rgba32f
        }
    },
        
    views:
    {        
        gbuffer_view:
        {
            target      : [gbuffer_albedo, gbuffer_normals, gbuffer_world_pos, gbuffer_depth],
            clear_colour: [0.0, 0.0, 0.0, 0.0],            
            clear_depth : 1.0,
            clear       :
            {
                gbuffer_albedo:
                {
                    clear_colour_f:[0.0, 0.0, 0.0, 0.0]
                },
                
                gbuffer_normals:
                {
                    clear_colour_f:[0.0, 0.0, 0.0, 0.0]
                },
                
                gbuffer_world_pos:
                {
                    clear_colour_f:[0.0, 0.0, 0.0, 0.0]
                }
            },
            viewport           : [0.0, 0.0, 1.0, 1.0],
            blend_state        : disabled,
            raster_state       : default,
            depth_stencil_state: default,
            pmfx_shader        : forward_render,
            technique          : gbuffer,
            scene              : main_scene,
            camera             : model_viewer_camera,
            scene_views        : ["ces_render_scene"]
        },
         
        deferred_lights_view:
        {
            target             : [main_colour],
            clear_colour       : [0.0, 0.0, 0.0, 0.0],            
            clear_depth        : 1.0,
            colour_write_mask  : 0xf,
            blend_state        : additive,
            viewport           : [0.0, 0.0, 1.0, 1.0],
            raster_state       : default,
            depth_stencil_state: "depth_always_no_write",
            shader             : deferred_render,
            scene              : main_scene,
            camera             : model_viewer_camera,
            scene_views        : ["ces_render_light_volumes"],
            
            sampler_bindings:
            [
                { texture: gbuffer_albedo, unit: 0, state: wrap_linear, shader: ps },
                { texture: gbuffer_normals, unit: 1, state: wrap_linear, shader: ps },
                { texture: gbuffer_world_pos, unit: 2, state: wrap_linear, shader: ps },
                { texture: gbuffer_depth, unit: 4, state: wrap_linear, shader: ps }
            ],
        },
    },
    
    view_sets: 
    {    
        deferred: [
            gbuffer_view,
            deferred_lights_view
        ]
    },
}

