{	
	render_targets:
	{
		pp_output_full:
		{
			size: equal,
			format: rgba8,
			pp: write
		},
	},
	
	post_process_views:
	{
		blit:
		{
			clear_colour:[0.5, 0.0, 0.5, 1.0],
			colour_write_mask: 0xf,
			blend_state: disabled,
			viewport: [0.0, 0.0, 1.0, 1.0],
			raster_state: post_process,
			depth_stencil_state: disabled,
			pmfx_shader: "post_process",
			technique: "blit"
		},
	},
	
	post_process_passes: 
	[
		{ 
			inherit: blit, 
			target: [pp_output_full],
			sampler_bindings:
			[
				{ texture: post_process_colour, unit: 0, state: wrap_linear, shader: ps },
			],
		},
		
		{ 
			inherit: blit, 
			target: [main_colour],
			sampler_bindings:
			[
				{ texture: pp_output_full, unit: 0, state: wrap_linear, shader: ps },
			],
		},
	]
}